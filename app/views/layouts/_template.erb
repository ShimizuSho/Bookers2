
<div class="notice">
	<p><%= flash[:notice] %></p>
</div>

<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size:"100x100", format:"jpeg", fallback: "no_image.jpg" %>
<p>name</p>
<%= user.name %>
<p>introduction</p>
<%= user.introduction %><br>
<button type="button" class="btn btn-lg">
	<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span><%= link_to 'Edit', edit_user_path(user.id), class: "btn btn-ls btn-success" %>
</button>


<h2>New book</h2>
<%= form_for(book) do |f| %>

	<% if book.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h2><%= book.errors.count %>error prohibited this obj from being saved:</h2>
				<ul>
					<% book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
		</div>
	<% end %>

	<p>Tittle</p>
	<%= f.text_field :title %>
	<p>Opinion</p>
	<%= f.text_area :body %><br>

	<%= f.submit 'Create Book', class: "btn btn-lg btn-primary" %>
<% end %>




