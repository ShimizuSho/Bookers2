<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'layouts/template', book: @book, user: @user %>
		</div>

		<div class="col-lg-9">
			<h2>Books</h2>
			<table class="table table-striped">
				<thead>
					<tr>Title</tr>
					<tr>Opinion</tr>
				</thead>
				<tbody>
					<% @user.books.each do |book| %>
							<tr>
								<td><%= attachment_image_tag book.user, :profile_image, size:"100x100", format:"jpeg", fallback: "no_image.jpg" %></td>
								<td><%= link_to book.title, book_path(book.id) %></td>
								<td><%= book.body %></td>
							</tr>
					<% end %>
				</tbody>	
			</table>
		</div>
	</div>
</div>


















